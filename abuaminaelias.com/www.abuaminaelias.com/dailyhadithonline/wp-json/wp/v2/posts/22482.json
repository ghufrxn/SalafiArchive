"","context":"In &quot;Faith \u0627\u0644\u0627\u064a\u0645\u0627\u0646&quot;","block_context":{"text":"Faith \u0627\u0644\u0627\u064a\u0645\u0627\u0646","link":"https:\/\/www.abuaminaelias.com\/dailyhadithonline\/category\/faith-iman\/"},"img":{"alt_text":"","src":"","width":0,"height":0},"classes":[]}],"_links":{"self":[{"href":"https:\/\/www.abuaminaelias.com\/dailyhadithonline\/wp-json\/wp\/v2\/posts\/22482","targetHints":{"allow":["GET"]}}],"collection":[{"href":"https:\/\/www.abuaminaelias.com\/dailyhadithonline\/wp-json\/wp\/v2\/posts"}],"about":[{"href":"https:\/\/www.abuaminaelias.com\/dailyhadithonline\/wp-json\/wp\/v2\/types\/post"}],"author":[{"embeddable":true,"href":"https:\/\/www.abuaminaelias.com\/dailyhadithonline\/wp-json\/wp\/v2\/users\/3712"}],"replies":[{"embeddable":true,"href":"https:\/\/www.abuaminaelias.com\/dailyhadithonline\/wp-json\/wp\/v2\/comments?post=22482"}],"version-history":[{"count":0,"href":"https:\/\/www.abuaminaelias.com\/dailyhadithonline\/wp-json\/wp\/v2\/posts\/22482\/revisions"}],"wp:attachment":[{"href":"https:\/\/www.abuaminaelias.com\/dailyhadithonline\/wp-json\/wp\/v2\/media?parent=22482"}],"wp:term":[{"taxonomy":"category","embeddable":true,"href":"https:\/\/www.abuaminaelias.com\/dailyhadithonline\/wp-json\/wp\/v2\/categories?post=22482"},{"taxonomy":"post_tag","embeddable":true,"href":"https:\/\/www.abuaminaelias.com\/dailyhadithonline\/wp-json\/wp\/v2\/tags?post=22482"}],"curies":[{"name":"wp","href":"https:\/\/api.w.org\/{rel}","templated":true}]}}