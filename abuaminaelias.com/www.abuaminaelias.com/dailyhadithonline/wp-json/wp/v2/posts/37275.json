ate against him,\u2026","rel":"","context":"In &quot;Quran Exegesis \u0627\u0644\u062a\u0641\u0633\u064a\u0631&quot;","block_context":{"text":"Quran Exegesis \u0627\u0644\u062a\u0641\u0633\u064a\u0631","link":"https:\/\/www.abuaminaelias.com\/dailyhadithonline\/category\/quran-exegesis-tafsir\/"},"img":{"alt_text":"","src":"","width":0,"height":0},"classes":[]}],"_links":{"self":[{"href":"https:\/\/www.abuaminaelias.com\/dailyhadithonline\/wp-json\/wp\/v2\/posts\/37275","targetHints":{"allow":["GET"]}}],"collection":[{"href":"https:\/\/www.abuaminaelias.com\/dailyhadithonline\/wp-json\/wp\/v2\/posts"}],"about":[{"href":"https:\/\/www.abuaminaelias.com\/dailyhadithonline\/wp-json\/wp\/v2\/types\/post"}],"author":[{"embeddable":true,"href":"https:\/\/www.abuaminaelias.com\/dailyhadithonline\/wp-json\/wp\/v2\/users\/3712"}],"replies":[{"embeddable":true,"href":"https:\/\/www.abuaminaelias.com\/dailyhadithonline\/wp-json\/wp\/v2\/comments?post=37275"}],"version-history":[{"count":0,"href":"https:\/\/www.abuaminaelias.com\/dailyhadithonline\/wp-json\/wp\/v2\/posts\/37275\/revisions"}],"wp:attachment":[{"href":"https:\/\/www.abuaminaelias.com\/dailyhadithonline\/wp-json\/wp\/v2\/media?parent=37275"}],"wp:term":[{"taxonomy":"category","embeddable":true,"href":"https:\/\/www.abuaminaelias.com\/dailyhadithonline\/wp-json\/wp\/v2\/categories?post=37275"},{"taxonomy":"post_tag","embeddable":true,"href":"https:\/\/www.abuaminaelias.com\/dailyhadithonline\/wp-json\/wp\/v2\/tags?post=37275"}],"curies":[{"name":"wp","href":"https:\/\/api.w.org\/{rel}","templated":true}]}}